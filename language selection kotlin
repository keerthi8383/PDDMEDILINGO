package com.saveetha.medilingo

import android.os.Bundle
import android.widget.ArrayAdapter
import android.widget.ListView
import androidx.appcompat.app.AppCompatActivity

class LanguageSelection : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_language_selection)

        val languageList = findViewById<ListView>(R.id.languageList)

        val languages = listOf("English", "Tamil", "Telugu", "Hindi", "Kannada", "Malayalam")
        val adapter = ArrayAdapter(this, android.R.layout.simple_list_item_1, languages)
        languageList.adapter = adapter

        // Handle language selection
        languageList.setOnItemClickListener { _, _, position, _ ->
            val selectedLanguage = languages[position]
            // TODO: Save selected language and apply it to app
        }
    }
}
