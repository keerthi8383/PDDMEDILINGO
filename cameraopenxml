override fun onCreate(savedInstanceState: Bundle?) {
    super.onCreate(savedInstanceState)
    setContentView(R.layout.activity_photocapture)

    val imageView = findViewById<ImageView>(R.id.capturedImage)
    val usePhotoButton = findViewById<Button>(R.id.usePhotoBtn)
    val retakeButton = findViewById<Button>(R.id.retakePhotoBtn)

    // Retrieve byte array and convert back to Bitmap
    val byteArray = intent.getByteArrayExtra("image_bitmap")

    if (byteArray != null) {
        val bitmap = android.graphics.BitmapFactory.decodeByteArray(byteArray, 0, byteArray.size)
        imageView.setImageBitmap(bitmap)

        // Use Photo -> Go to GenerateSummary page
        usePhotoButton.setOnClickListener {
            val intent = Intent(this, GenerateSummary::class.java)
            intent.putExtra("image_bitmap", byteArray) // pass byteArray again
            startActivity(intent)
            finish()
        }

        // Retake Photo -> Go back to Cameraopen
        retakeButton.setOnClickListener {
            val intent = Intent(this, Cameraopen::class.java)
            startActivity(intent)
            finish()
        }
    } else {
        Toast.makeText(this, "No image captured. Please try again.", Toast.LENGTH_LONG).show()
        finish()
    }
}
